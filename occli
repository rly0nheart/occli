#!/usr/bin/env python3

import logging
from src.main import *
from lib.banner import banner
from lib.colors import red,white,green,reset

print(banner)
if __name__ == '__main__':
	while True:
		try:
			occli(args)
			break
			
		except KeyboardInterrupt:
		    if args.verbose:
		    	print('\n')
		    	logging.critical(f'{white}Process interrupted with {red}Ctrl{white}+{red}C{reset}')
		    	break
		    break
				
		except IndexError:
		    break
		    
		except Exception as e:
		    if args.verbose:
		    	logging.warning(f'{white}An error occured: {red}{e}{reset}')
		    
	if args.verbose:
		logging.info(f'{white}Finished in {green}{datetime.now()-start_time}{white} seconds.{reset}')
